{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ES6",
    "target": "ES5",
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "app/*": ["src/*"],
      "static/*": ["static/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
